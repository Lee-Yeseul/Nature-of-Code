{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "include": ["./**/*.ts", "src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
